#if !defined(GIDBITS_H_INSIDE) && !defined(GIDBITS_COMPILATION)
#error "only <gidbits.h> may be included directly"
#endif

#ifndef GIDBITS_VERSION_H
#define GIDBITS_VERSION_H

#define GIDBITS_MAJOR_VERSION (@GIDBITS_MAJOR_VERSION@)
#define GIDBITS_MINOR_VERSION (@GIDBITS_MINOR_VERSION@)
#define GIDBITS_MICRO_VERSION (@GIDBITS_MICRO_VERSION@)
#define GIDBITS_EXTRA_VERSION "@GIDBITS_EXTRA_VERSION@"

#define GIDBITS_VERSION       "@GIDBITS_VERSION@"

#define GIDBITS_VERSION_CHECK(x,y,z) \
	((x) == GIDBITS_MAJOR_VERSION && \
	 ((y) < GIDBITS_MINOR_VERSION || \
	  ((y) == GIDBITS_MINOR_VERSION && (z) <= GIDBITS_MICRO_VERSION)))

#endif /* GIDBITS_VERSION_H */

